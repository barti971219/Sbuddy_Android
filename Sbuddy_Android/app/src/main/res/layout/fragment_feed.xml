        <TextView
            android:id="@+id/content_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfdsgdsgdgsdgfsgfgdajfjdsafhdjafhjdafhjdahfjdahfjdjafhajdsfhjadsfhdjafhajdsfhjadsfhjdasfhjhasfjhjsgfdgsfdgsfdgsdfgsgfdgsfdgsdfgfsdgsfdgsfdgsfdgsfsdfgsfdgsfd"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/content_img2" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
